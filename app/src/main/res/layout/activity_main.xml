<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    tools:context="com.base111.nearr2.MainActivity">

    <ImageView
        android:id="@+id/applogo"
        android:src="@drawable/nearr_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lookformsg"
        android:layout_below="@+id/applogo"
        android:layout_marginTop="27dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lookfor"
        android:textColor="@color/lookforcolor"
        android:textSize="27sp"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_below="@+id/lookformsg"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/findBtn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/findBtnBack"
        android:text="@string/findBtnText"
        android:textColor="@color/findBtnTextColor"
        android:textSize="20sp"
        android:onClick="locationBtn"/>
</RelativeLayout>
